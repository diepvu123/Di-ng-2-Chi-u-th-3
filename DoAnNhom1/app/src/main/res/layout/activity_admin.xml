    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardView"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:text="Lối tắt:"
            android:padding="3dp"
            android:layout_marginStart="5dp"
            />


        <TextView
            android:id="@+id/txtAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tài Khoản"
            android:textSize="18sp"
            android:layout_marginTop="5sp"
            android:padding="5dp"
            android:fontFamily="@font/sf_medium"
            android:textColor="#BC000000"
            android:drawablePadding="10dp"
            android:layout_marginStart="5dp"
            app:drawableStartCompat="@drawable/ic_male" />

        <TextView
            android:id="@+id/txtOrders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đơn đặt hàng"
            android:textSize="18sp"
            android:layout_marginTop="5sp"
            android:padding="5dp"
            android:fontFamily="@font/sf_medium"
            android:textColor="#BC000000"
            android:drawablePadding="10dp"
            android:layout_marginStart="5dp"
            app:drawableStartCompat="@drawable/ic_listed_items" />



        <TextView
            android:id="@+id/txtSignOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng xuất"
            android:textSize="18sp"
            android:layout_marginTop="5sp"
            android:padding="5dp"
            android:fontFamily="@font/sf_medium"
            android:textColor="#BC000000"
            android:drawablePadding="10dp"
            android:layout_marginStart="5dp"
            app:drawableStartCompat="@drawable/logout" />















